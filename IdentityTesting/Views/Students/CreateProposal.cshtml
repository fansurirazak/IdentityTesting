@using IdentityTesting.Models
@model ProjectProp

@{
    ViewData["Title"] = "Add Proposal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add New Project Proposal</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateProposal" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProjectTitle" class="control-label"></label>
                <input asp-for="ProjectTitle" class="form-control" />
                <span asp-validation-for="ProjectTitle" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DomainID" class="control-label"></label>
                <select asp-for="DomainID" class="form-control" asp-items="ViewBag.DomainID">
                    <option value="" disabled>-- Select Domain --</option>
                </select>
                <span asp-validation-for="DomainID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SupervisorID" class="control-label"></label>
                <select asp-for="SupervisorID" class="form-control" asp-items="ViewBag.SupervisorID">
                    <option value="" disabled>-- Select Supervisor --</option>
                </select>
                <span asp-validation-for="SupervisorID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProjSemester" class="control-label"></label>
                <input asp-for="ProjSemester" class="form-control" />
                <span asp-validation-for="ProjSemester" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProjSession" class="control-label"></label>
                <input asp-for="ProjSession" class="form-control" />
                <span asp-validation-for="ProjSession" class="text-danger"></span>
            </div>

            <div>
                <input class="my-2" type="file" name="file" /> 
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Proposals">Back to List of Proposals</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
