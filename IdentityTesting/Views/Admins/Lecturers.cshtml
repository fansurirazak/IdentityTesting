@using IdentityTesting.Models
@model IEnumerable<ApplicationUser>


@{
    ViewData["Title"] = "Lecturers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
    <a asp-action="CreateLectAdmin">Create New</a>
</p>
<table class="table" id="woopwoop">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Domain)
            </th>
            <th>
               
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @{var domainLoc = (item.DomainID==1 ? "Research" : "Development");} 
                @Html.DisplayFor(modelItem => domainLoc)
            </td>
            <td>
                 <a asp-action="ToggleCommitee" asp-route-id="@item.Id">Add to Commitee</a> |
                 <a asp-action="EditLecturer" asp-route-id="@item.Id">Edit Lecturer</a> |
                 <a asp-action="DeleteLecturer" asp-route-id="@item.Id">Delete Lecturer</a> |
            </td>
        </tr>
}
    </tbody>
</table>