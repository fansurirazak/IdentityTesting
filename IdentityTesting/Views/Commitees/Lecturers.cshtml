@{
}

@using IdentityTesting.Models.ViewModels
@model IEnumerable<LecturerDomainViewModel>


@{
    ViewData["Title"] = "Lecturers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table" id="woopwoop">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Email
            </th>
            <th>
                Domain
            </th>
            <th>
               
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ACADDomainName)
            </td>
            <td>
                 <a asp-action="AssignDomain" asp-route-id="@item.Id">Assign Domain</a> 
            </td>
        </tr>
}
    </tbody>
</table>